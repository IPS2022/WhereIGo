<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail2Activity"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/gotomap"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병명"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#2196f3"
                android:background="@drawable/underline"
                />
            <TextView
                android:id="@+id/detail_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="진료과"
                android:textSize="15dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="[질병 정의]"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#2196f3"/>






            <TextView
                android:id="@+id/detail_disease_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병 정의 내용"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="[원인]"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#2196f3"/>
            <TextView
                android:id="@+id/detail_disease_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병 원인 내용"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="[증상]"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#2196f3"/>
            <TextView
                android:id="@+id/detail_disease_content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병 증상 내용"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="[치료]"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#2196f3"/>
            <TextView
                android:id="@+id/detail_disease_content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병 치료 내용"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>